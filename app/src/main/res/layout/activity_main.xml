<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5fbfe">

    <!-- Sidebar -->
    <LinearLayout
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#fff"
        android:padding="24dp"
        android:gravity="top|center_horizontal"
        android:elevation="2dp"
        android:layout_margin="8dp">

        <ImageView
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:src="@android:drawable/ic_menu_myplaces"
            android:backgroundTint="#298cf7"
            android:layout_marginBottom="12dp"/>

        <TextView
            android:id="@+id/driver_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="motorista"
            android:textStyle="bold"
            android:textColor="#222"
            android:textSize="20sp"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Motorista"
            android:textColor="#888"
            android:textSize="14sp"
            android:layout_marginBottom="24dp"/>

        <Button
            android:id="@+id/btnPedidos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Visualizar\nPedidos"
            android:backgroundTint="#398cf7"
            android:textColor="#fff"
            android:drawableLeft="@android:drawable/ic_menu_compass"
            android:layout_marginBottom="18dp"/>

        <Button
            android:id="@+id/btnSenha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mudar\nSenha"
            android:backgroundTint="#72787f"
            android:textColor="#fff"
            android:drawableLeft="@android:drawable/ic_lock_lock"
            android:layout_marginBottom="18dp"/>

        <Button
            android:id="@+id/btnSair"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sair"
            android:backgroundTint="#ee4c4c"
            android:textColor="#fff"
            android:drawableLeft="@android:drawable/ic_menu_close_clear_cancel"/>

    </LinearLayout>

    <!-- Main Content -->
    <FrameLayout
        android:id="@+id/mainContent"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:padding="32dp"/>

</LinearLayout>